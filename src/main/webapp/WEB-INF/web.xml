<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>sgp</display-name>
	
	<servlet>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<servlet-class>dev.sgp.web.ListerCollaborateursController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditerCollaborateursController</servlet-name>
		<servlet-class>dev.sgp.web.EditerCollaborateursController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreerCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.CreerCollaborateurController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreationCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.CreationCollaborateurController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditionCollaborateurController</servlet-name>
		<servlet-class>dev.sgp.web.EditionCollaborateurController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/lister</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditerCollaborateursController</servlet-name>
		<url-pattern>/collaborateurs/editer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreerCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/creer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreationCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/creation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditionCollaborateurController</servlet-name>
		<url-pattern>/collaborateurs/edition</url-pattern>
	</servlet-mapping>
	
</web-app>
